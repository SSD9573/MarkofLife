/* pages/flex/index.wxss */
@import "../../assets/wxss/todo.wxss";

.page {
  width: 100%;
  /* height: 100%; */
  height: 100vh;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
}

.menu {
  background-color: #bff2e2;
  display: flex;
  height: 10%;
  width: 100%;
}

.title {
  background-color: #e0f9a9;
  display: flex;
  height: 5%;
  width: 100%;
}

.content {
  background-color: #e9dbfc;
  display: flex;
  height: 80%;
  margin-bottom: 5%;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
}

.item {
  width: calc(100%/7 - 5rpx * 2);
  height: calc(100%/5 - 5rpx * 2);
  margin: 5rpx;
  background-color: #f0eff4;
  text-align: center;
  line-height: 80rpx;
}