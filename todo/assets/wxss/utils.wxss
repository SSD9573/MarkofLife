/* reset */
/* 去掉 chrome 中获取焦点时出现黄色边框 */
input, button, select, textarea {
  outline: none;
  /* 修复苹果手机禁用时的字体显示问题 */
  -webkit-text-fill-color: initial;
  -webkit-appearance: none;
  -webkit-opacity: 1;
}

/* 背景颜色 */
.bg-default {
  background-color: #F1F0F6 !important;
}

.bg-primary {
  background-color: #FCD952 !important;
}

.bg-secondary {
  background-color: #F1F0F6 !important;
}

.bg-success {
  background-color: #57B357 !important;
}

.bg-info {
  background-color: #40A1E3 !important;
}

.bg-danger {
  background-color: #FC5F4F !important;
}

.bg-muted {
  background-color: #D3D6DB !important;
}

.bg-white {
  background-color: #FFF !important;
}

.bg-black {
  background-color: #000 !important;
}

.bg-none {
  background-color: transparent !important;
}

/* 文本颜色 */
.text-default {
  color: #474748 !important;
  -webkit-text-fill-color: #474748 !important;
}

.text-primary {
  color: #FCD952 !important;
  -webkit-text-fill-color: #FCD952 !important;
}

.text-secondary {
  color: #9C9C9D !important;
  -webkit-text-fill-color: #9C9C9D !important;
}

.text-success {
  color: #57B357 !important;
  -webkit-text-fill-color: #57B357 !important;
}

.text-info {
  color: #3F9EE6 !important;
  -webkit-text-fill-color: #3F9EE6 !important;
}

.text-danger {
  color: #FD7169 !important;
  -webkit-text-fill-color: #FD7169 !important;
}

.text-warning {
  color: #FFA402 !important;
  -webkit-text-fill-color: #FFA402 !important;
}

.text-muted {
  color: #D3D6DB !important;
  -webkit-text-fill-color: #D3D6DB !important;
}

.text-white {
  color: #FFF !important;
  -webkit-text-fill-color: #FFF !important;
}

.text-black {
  color: #000 !important;
  -webkit-text-fill-color: #000 !important;
}

/* 字体样式 */
.fw-bold {
  font-weight: bold !important;
}

.fw-normal {
  font-weight: normal !important;
}

/* 字体大小 */
.fs-xxxs {
  font-size: 0.5em !important;
}

.fs-xxs {
  font-size: 0.625em !important;
}

.fs-xs {
  font-size: 0.75em !important;
}

.fs-s {
  font-size: 0.875em !important;
}

.fs-default {
  font-size: 1em !important;
}

.fs-l {
  font-size: 1.125em !important;
}

.fs-xl {
  font-size: 1.25em !important;
}

.fs-xxl {
  font-size: 1.375em !important;
}

.fs-xxxl {
  font-size: 1.5em !important;
}

/* 边框 */
.bd-t {
  border-top: 1px solid rgba(0,0,0,.12) !important;
}

.bd-b {
  border-bottom: 1px solid rgba(0,0,0,.12) !important;
}

.bd-l {
  border-left: 1px solid rgba(0,0,0,.12) !important;
}

.bd-r {
  border-right: 1px solid rgba(0,0,0,.12) !important;
}

.bd-0 {
  border: 0 !important;
}

/* 圆角 */
.radius-xxs {
  border-radius: 3px !important;
}

.radius-xs {
  border-radius: 5px !important;
}

.radius-s {
  border-radius: 7px !important;
}

.radius {
  border-radius: 9px !important;
}

.radius-l {
  border-radius: 11px !important;
}

.radius-xl {
  border-radius: 13px !important;
}

.radius-xxl {
  border-radius: 15px !important;
}

.radius-max {
  border-radius: 9999px !important;
}

.radius-circle {
  border-radius: 100% !important;
}

/* 透明度 */
.op-min {
  opacity: 0 !important;
}

.op-xxs {
  opacity: 0.2 !important;
}

.op-xs {
  opacity: 0.3 !important;
}

.op-s {
  opacity: 0.4 !important;
}

.op {
  opacity: 0.5 !important;
}

.op-l {
  opacity: 0.6 !important;
}

.op-xl {
  opacity: 0.7 !important;
}

.op-xxl {
  opacity: 0.8 !important;
}

.op-max {
  opacity: 1 !important;
}

/* 大小 */
.w-full  {
  width: 100% !important;
}

.h-full  {
  height: 100% !important;
}

/* 位置 */
.fixed-top {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
}

.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10;
}

/* 滚动 */
.scroll, .scroll-x, .scroll-y {
  -webkit-overflow-scrolling: touch;
}

.scroll {
  overflow: auto;
}

.scroll-x {
  overflow-x: auto;
  overflow-y: hidden;
}
.scroll-y {
  overflow-x: hidden;
  overflow-y: auto;
}

/* 全屏 */
.full-screen {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
